<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_recicler_view_vista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DE5858">

    <TextView
        android:id="@+id/txt_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Nombre"
        app:layout_constraintBottom_toBottomOf="@+id/txt_descripcion"
        app:layout_constraintEnd_toStartOf="@+id/txt_descripcion"
        app:layout_constraintTop_toTopOf="@+id/txt_descripcion"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_dar_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Dar like"
        app:layout_constraintEnd_toEndOf="@+id/txt_descripcion"
        app:layout_constraintStart_toStartOf="@+id/txt_descripcion"
        app:layout_constraintTop_toBottomOf="@+id/txt_descripcion" />

    <TextView
        android:id="@+id/txt_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.195" />

    <TextView
        android:id="@+id/txt_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Likes"
        app:layout_constraintBottom_toBottomOf="@+id/txt_descripcion"
        app:layout_constraintStart_toEndOf="@+id/txt_descripcion"
        app:layout_constraintTop_toTopOf="@+id/txt_descripcion"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>